{
  "root": true,
  "extends": [
    "standard"
  ],
  "plugins": [
    "node"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": [
      "error",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "indent": [
      "warn",
      2
    ]
  }
}